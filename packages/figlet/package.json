{
  "name": "@effect-ts/figlet",
  "version": "0.0.0",
  "license": "MIT",
  "repository": "https://github.com/Effect-TS/figlet.git",
  "homepage": "https://www.matechs.com",
  "scripts": {
    "clean": "yarn ets:rimraf build tsbuildinfo dist",
    "build-fonts-cjs": "copyfiles -u 3 \"src/Internal/fonts/**/*\" dist/Internal/fonts",
    "build-fonts-esm": "copyfiles -u 3 \"src/Internal/fonts/**/*\" dist/_esm/Internal/fonts",
    "build-fonts": "yarn ets:concurrently \"yarn build-fonts-cjs\" \"yarn build-fonts-esm\"",
    "build-cjs": "yarn ets:tsc -p tsconfig.build.cjs.json",
    "build-esm": "yarn ets:tsc -p tsconfig.build.esm.json && babel build/esm/ -d build/esm/ -s --plugins annotate-pure-calls",
    "build-post": "yarn ets:build-utils pack",
    "build": "yarn ets:concurrently \"yarn build-cjs\" \"yarn build-esm\" && yarn build-post && yarn build-fonts",
    "lint": "yarn ets:eslint . --ext .ts,.tsx",
    "autofix": "yarn prettier && yarn lint --fix && yarn prettier",
    "prettier": "yarn ets:prettier --write \"./{src,test,demo}/**/*.ts\"",
    "tc": "yarn ets:tsc --noEmit",
    "circular": "yarn ets:madge --circular --ts-config ./tsconfig.json --extensions ts ./src",
    "demo": "yarn ets:ts-node"
  },
  "publishConfig": {
    "access": "public",
    "directory": "dist"
  },
  "sideEffects": false,
  "peerDependencies": {
    "@effect-ts/core": "0.48.0",
    "@effect-ts/node": "0.31.0"
  },
  "config": {
    "side": [],
    "modules": [
      "FigCharacter",
      "FigFont",
      "FigFont/HorizontalLayout",
      "FigFont/HorizontalSmushingRule",
      "FigFont/PrintDirection",
      "FigFont/Settings",
      "FigFont/VerticalLayout",
      "FigFont/VerticalSmushingRule",
      "FigHeader",
      "FigHeader/FullLayout",
      "FigHeader/OldLayout",
      "FigletClient",
      "FigletException",
      "Figure",
      "FontFileReader",
      "Internal",
      "Internal/Transducers",
      "OptionsBuilder",
      "OptionsBuilder/BuilderAction",
      "Rendering",
      "Rendering/HorizontalMergeRules",
      "Rendering/MergeAction",
      "Rendering/MergeStrategy",
      "RenderOptions",
      "RenderOptions/HorizontalLayout",
      "RenderOptions/Justification",
      "SubColumns/PrintDirection",
      "SubLines"
    ]
  }
}
